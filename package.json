{
  "name": "littlebit",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "bunx --bun astro dev",
    "dev:search": "bun run build && bun run copy:pagefind && bunx --bun astro dev",
    "build": "bunx --bun astro build",
    "copy:pagefind": "cp -r dist/client/pagefind public/ 2>/dev/null || mkdir -p public && cp -r dist/client/pagefind public/ 2>/dev/null || echo 'Run build first'",
    "start": "node dist/server/entry.mjs",
    "preview": "bunx --bun astro preview",
    "astro": "bunx --bun astro",
    "postbuild": "pagefind --site dist/client"
  },
  "dependencies": {
    "@astrojs/mdx": "^4.3.3",
    "@astrojs/node": "^9.4.1",
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.5.0",
    "@fontsource-variable/geist-mono": "^5.2.6",
    "@fontsource-variable/noto-sans": "^5.2.7",
    "@iconify-json/lucide": "^1.2.62",
    "@iconify-json/simple-icons": "^1.2.47",
    "@iconify/utils": "^3.0.1",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@shikijs/themes": "^3.9.2",
    "@tailwindcss/vite": "^4.1.12",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "astro": "^5.13.0",
    "astro-expressive-code": "^0.41.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.539.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.34.3",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.12"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@types/bun": "^1.2.20",
    "pagefind": "^1.3.0",
    "shiki": "^3.9.2",
    "tw-animate-css": "^1.3.6",
    "vite": "^7.1.2"
  }
